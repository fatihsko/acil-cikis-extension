{
  "manifest_version": 3,
  "name": "Acil Çıkış",
  "version": "1.0",
  "description": "Alt+Shift+X Kombinasyonunu kullandığınızda sekmeyi kapatan ve geçmişten silen eklenti. Bu eklenti @fatihsko tarafından geliştirildi.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "history",
    "tabs"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "close-tab": {
      "suggested_key": {
        "default": "Alt+Shift+X"
      },
      "description": "Sekmeyi kapat ve geçmişten sil"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
